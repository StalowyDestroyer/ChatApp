{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // Upewnij się, że ta opcja jest włączona
    "emitDecoratorMetadata": true,   // Upewnij się, że ta opcja jest włączona
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
